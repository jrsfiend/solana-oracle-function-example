{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "types": [
      "mocha",
      "chai",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "strict": false,
    "strictNullChecks": false,
    "target": "es6"
  },
  "include": [
    "tests/**/*",
    "target/types/*.ts"
  ],
  "exclude": [
    "target",
    "lib"
  ]
}